													<tr>
														<th>First Name</th>
														<th>Last Name</th>
														<th>Email</th>
														<th>Phone Number</th>
														<th>Language</th>
														<th>Experience</th>
														<th class="text-end">Actions</th>
													</tr>
												</thead>
												<tbody>
													{% for guide in guides %}
													<tr>
														<td class="fw-semibold">{{ guide.name }}</td>
														<td class="fw-semibold">{{ guide.lastName }}</td>
														<td>
															<a href="mailto:{{ guide.email }}" class="text-primary"> {{ guide.email }} </a>
														</td>
														<td>{{ guide.phoneNum }}</td>
														<td>
															<span class="experience-badge"> {{ guide.language }} </span>
														</td>
														<td>
															<span class="experience-badge"> {{ guide.experience }} ans </span>
														</td>
														<td class="text-end">
