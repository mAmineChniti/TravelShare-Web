{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <h1 class="text-2xl font-bold mb-4">Profile</h1>
    <p class="mb-6">Manage your personal information, preferences, and account settings here.</p>
    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-lg font-semibold mb-4">Personal Information</h2>
        <p class="text-sm text-gray-600">Name: John Doe</p>
        <p class="text-sm text-gray-600">Email: john.doe@example.com</p>
        <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded">Edit Profile</button>
    </div>
    <div class="bg-white shadow-md rounded-lg p-6 mt-6">
        <h2 class="text-lg font-semibold mb-4">Travel History</h2>
        <ul class="list-disc pl-6">
            <li class="text-sm text-gray-600">Trip to Paris - March 2025</li>
            <li class="text-sm text-gray-600">Beach Vacation in Bali - January 2025</li>
            <li class="text-sm text-gray-600">Mountain Hiking in Colorado - December 2024</li>
        </ul>
    </div>
</div>
{% endblock body %}
