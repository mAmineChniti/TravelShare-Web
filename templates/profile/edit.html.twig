{% extends 'base.html.twig' %} {% block title %}Update My Profile{% endblock %} {% block css %}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<link href="{{ asset('css2/style.css') }}" rel="stylesheet" />
{% endblock %} {% block body %}
<div class="container mt-5 mb-5">
	<div class="row justify-content-center">
		<div class="col-lg-10">
			{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fade show">
				{{ message }}
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			{% endfor %} {% for message in app.flashes('error') %}
			<div class="alert alert-danger alert-dismissible fade show">
				{{ message }}
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			{% endfor %}

			<div class="card">
				<div class="card-header text-center position-relative bg-primary text-white">
					<div class="position-absolute" style="left: 20px; top: 50%; transform: translateY(-50%)">
						<a href="{{ path('app_profile') }}" class="btn btn-link text-white p-0">
							<i class="fas fa-arrow-left fa-lg"></i>
						</a>
					</div>
					<h3 class="d-inline-block m-0">Update My Profile</h3>
				</div>

				{% block css %}
				<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" />
				<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
				<link href="{{ asset('css2/style.css') }}" rel="stylesheet" />
				<style>
					.section-title {
						color: #2c3e50;
						border-bottom: 2px solid #3498db;
						padding-bottom: 8px;
						margin-bottom: 20px;
					}
					.avatar-container {
						position: relative;
						text-align: center;
					}
					.avatar {
						width: 200px;
						height: 200px;
						object-fit: cover;
						border-radius: 50%;
						border: 3px solid #3498db;
						margin-bottom: 15px;
					}
					.password-match-error {
						color: #dc3545;
						font-size: 0.875em;
						margin-top: 0.25rem;
						display: none;
					}
					.tbtn-primary {
						background-color: #3498db;
						color: white;
						padding: 10px 20px;
						border: none;
						border-radius: 4px;
						cursor: pointer;
						transition: background-color 0.3s;
					}
					.tbtn-primary:hover {
						background-color: #2980b9;
					}
					.form-control {
						border-radius: 4px;
						border: 1px solid #ddd;
						padding: 10px;
					}
					.file-input-wrapper {
						position: relative;
						display: inline-block;
						overflow: hidden;
						margin-bottom: 15px;
					}
					.custom-file-btn {
						display: inline-block;
						padding: 8px 15px;
						background-color: #3498db;
						color: white;
						border-radius: 4px;
						cursor: pointer;
						transition: background-color 0.3s;
					}
					.custom-file-btn:hover {
						background-color: #2980b9;
					}
					.file-name {
						margin-top: 5px;
						font-size: 0.9em;
						color: #6c757d;
					}
					.small-address-field {
						font-size: 12px;
						line-height: 1.2;
						padding: 6px 12px;
						min-height: 40px;
					}
				</style>
				{% endblock %} {% block body %}
				<div class="container mt-5 mb-5">
					<div class="row justify-content-center">
						<div class="col-lg-10">
							{% for message in app.flashes('success') %}
							<div class="alert alert-success alert-dismissible fade show">
								{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							{% endfor %} {% for message in app.flashes('error') %}
							<div class="alert alert-danger alert-dismissible fade show">
								{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							{% endfor %}

							<div class="card">
								<div class="card-header text-center position-relative bg-primary text-white">
									<div class="position-absolute" style="left: 20px; top: 50%; transform: translateY(-50%)">
										<a href="{{ path('app_profile') }}" class="btn btn-link text-white p-0">
											<i class="fas fa-arrow-left fa-lg"></i>
										</a>
									</div>
									<h3 class="d-inline-block m-0">Update My Profile</h3>
								</div>

								<div class="card-body">
									{{ form_start(form, { 'attr': { 'id': 'profileForm', 'enctype': 'multipart/form-data' } }) }}

									<div class="row">
										<!-- Colonne gauche : Photo -->
										<div class="col-md-4">
											<div class="avatar-container">
												<img
													src="{{ user.photo ? 'data:image/jpeg;base64,' ~ imageData : asset('images2/default-avatar.png') }}"
													class="avatar img-thumbnail"
													alt="Profile Picture"
													id="profileImage"
												/>

												<div class="file-input-wrapper">
													<button type="button" class="custom-file-btn">
														<i class="fas fa-camera mr-2"></i> Change the photo
													</button>
													{{ form_widget(form.photo, { 'attr': { 'id': 'photoInput', 'accept': 'image/*', 'style':
													'position: absolute; left: 0; top: 0; opacity: 0; width: 100%; height: 100%; cursor: pointer;'
													} }) }}
												</div>
												<div id="fileName" class="file-name"></div>
											</div>
										</div>

										<!-- Colonne droite : Formulaire -->
										<div class="col-md-8">
											<div class="mb-4">
												<h4 class="section-title">General Information</h4>
												<div class="row">
													<div class="col-md-6">{{ form_row(form.name, {'label': 'Name'}) }}</div>
													<div class="col-md-6">{{ form_row(form.lastName, {'label': 'Last Name'}) }}</div>
												</div>
												<div class="row">
													<div class="col-md-6">{{ form_row(form.phoneNum, {'label': 'Phone Num'}) }}</div>
													<div class="col-md-6">
														{{ form_row(form.address, { 'label': 'Address', 'attr': { 'class': 'form-control
														small-address-field', 'rows': '3' } }) }}
													</div>
												</div>
											</div>

											<div class="mb-4">
												<h4 class="section-title">Account Information</h4>
												{{ form_row(form.email, {'label': 'Email'}) }}
												<div class="row">
													<div class="col-md-6">
														{{ form_row(form.password, { 'label': 'New Password', 'attr': {'placeholder': 'Leave blank
														if unchanged'} }) }}
													</div>
													<div class="col-md-6">
														{{ form_row(form.confirm_password, { 'label': 'Confirmation', 'attr': {'placeholder':
														'Confirm password'} }) }}
													</div>
												</div>
											</div>

											<div id="passwordMatchError" class="password-match-error">Passwords do not match.</div>
										</div>
									</div>

									{{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
				</div>
				{% endblock %} {% block js %}
				<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

				<script>
					$(document).ready(function () {
						// Gestion du changement de photo
						$("#photoInput").change(function () {
							if (this.files && this.files[0]) {
								var file = this.files[0];

								// Afficher le nom du fichier
								$("#fileName").text(file.name);

								// Pr√©visualisation de l'image
								var reader = new FileReader();
								reader.onload = function (e) {
									$("#profileImage").attr("src", e.target.result);
								};
								reader.readAsDataURL(file);
							}
						});

						// Password validation
						function validatePasswords() {
							const password = $("#{{ form.password.vars.id }}").val();
							const confirmPassword = $("#{{ form.confirm_password.vars.id }}").val();
							const errorElement = $("#passwordMatchError");

							if (password && confirmPassword && password !== confirmPassword) {
								errorElement.show();
								return false;
							} else {
								errorElement.hide();
								return true;
							}
						}

						// Live check
						$("#{{ form.password.vars.id }}, #{{ form.confirm_password.vars.id }}").on("input", validatePasswords);

						// Final check on submit
						$("#profileForm").on("submit", function (e) {
							if (!validatePasswords()) {
								e.preventDefault();
							}
						});

						// Auto close alerts
						setTimeout(function () {
							$(".alert").alert("close");
						}, 5000);
					});
				</script>
				{% endblock %}
			</div>
		</div>
	</div>
</div>
