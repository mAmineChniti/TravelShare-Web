<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<title>{% block title %}Historique des Réclamations{% endblock %}</title>
		<meta content="width=device-width, initial-scale=1.0" name="viewport" />

		<!-- Lien vers la favicon -->
		<link rel="icon" href="{{ asset('images2/favicon.svg') }}" type="image/x-icon" />

		{% block css%}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
		<!-- Lien vers le CSS personnalisé -->
		<link href="{{ asset('css2/style.css') }}" rel="stylesheet" />

		{% endblock%}
	</head>

	{% block body %}

	<body>
		<div class="container py-5">
			<!-- Header avec bouton retour -->
			<div class="d-flex align-items-center mb-4">
				<a href="{{ path('app_home') }}" class="btn btn-outline-secondary me-3">
					<i class="fas fa-arrow-left"></i>
				</a>
				<h1 class="mb-0">Historique des Réclamations</h1>
			</div>

			<!-- Section filtres -->
			<div class="filter-section p-4 mb-4">
				<div class="row">
					<div class="col-md-3 mb-3">
						<label class="form-label">Statut</label>
						<select class="form-select">
							<option selected>Tous</option>
							<option>En cours</option>
							<option>Répondu</option>
						</select>
					</div>
					<div class="col-md-3 mb-3">
						<label class="form-label">Date de début</label>
						<input type="date" class="form-control" />
					</div>
					<div class="col-md-3 mb-3">
						<label class="form-label">Date de fin</label>
						<input type="date" class="form-control" />
					</div>
					<div class="col-md-3 d-flex align-items-end mb-3">
						<button class="btn btn-primary w-100"><i class="fas fa-filter me-2"></i>Filtrer</button>
					</div>
				</div>
			</div>

			<!-- Liste des réclamations -->
			<div class="row">
				<div class="col-md-4 mb-4">
					<div class="reclamation-card p-4 bg-white shadow-sm mb-3">
						<div class="d-flex justify-content-between align-items-start mb-2">
							<span class="badge status-badge status-in-progress">En cours</span>
							<small class="text-muted">10/06/2023</small>
						</div>
						<h5 class="mb-2" id="reclamation-title-1">Facture erronée</h5>
						<p class="text-muted mb-3" id="reclamation-description-1">
							Ma facture de juin contient des erreurs de calcul...
						</p>
						<div class="d-flex justify-content-between align-items-center">
							<span class="badge bg-light text-dark"> <i class="fas fa-tag me-1"></i> Facturation </span>
							<div class="btn-group">
								<!-- Bouton de modification avec icône uniquement -->
								<button
									class="btn btn-sm btn-outline-warning d-flex justify-content-center align-items-center"
									data-bs-toggle="modal"
									data-bs-target="#editReclamationModal"
									onclick="loadReclamationData(1)"
									style="font-size: 1rem; padding: 0.3rem 0.5rem; width: 3rem; height: 3rem"
								>
									<i class="fas fa-edit"></i>
								</button>

								<!-- Bouton de suppression avec icône uniquement -->
								<button
									class="btn btn-sm btn-outline-danger d-flex justify-content-center align-items-center"
									data-bs-toggle="modal"
									data-bs-target="#deleteReclamationModal"
									style="font-size: 1rem; padding: 0.3rem 0.5rem; width: 3rem; height: 3rem"
								>
									<i class="fas fa-trash"></i>
								</button>
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-4 mb-4">
					<div class="reclamation-card p-4 bg-white shadow-sm mb-3">
						<div class="d-flex justify-content-between align-items-start mb-2">
							<span class="badge status-badge status-resolved">Répondu</span>
							<small class="text-muted">02/06/2023</small>
						</div>
						<h5 class="mb-2" id="reclamation-title-2">Livraison manquante</h5>
						<p class="text-muted mb-3" id="reclamation-description-2">Ma commande du 28/05 n'est jamais arrivée...</p>
						<div class="d-flex justify-content-between align-items-center">
							<span class="badge bg-light text-dark"> <i class="fas fa-tag me-1"></i> Livraison </span>
							<div class="btn-group">
								<!-- Bouton de modification avec icône uniquement -->
								<button
									class="btn btn-sm btn-outline-warning d-flex justify-content-center align-items-center"
									data-bs-toggle="modal"
									data-bs-target="#editReclamationModal"
									onclick="loadReclamationData(2)"
									style="font-size: 1rem; padding: 0.3rem 0.5rem; width: 3rem; height: 3rem"
								>
									<i class="fas fa-edit"></i>
								</button>

								<!-- Bouton de suppression avec icône uniquement -->
								<button
									class="btn btn-sm btn-outline-danger d-flex justify-content-center align-items-center"
									data-bs-toggle="modal"
									data-bs-target="#deleteReclamationModal"
									style="font-size: 1rem; padding: 0.3rem 0.5rem; width: 3rem; height: 3rem"
								>
									<i class="fas fa-trash"></i>
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Modale pour modifier la réclamation -->
			<div
				class="modal fade"
				id="editReclamationModal"
				tabindex="-1"
				aria-labelledby="editReclamationModalLabel"
				aria-hidden="true"
			>
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="editReclamationModalLabel">Modifier la réclamation</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<form id="editReclamationForm">
								<div class="mb-3">
									<label for="reclamationTitle" class="form-label">Titre</label>
									<input type="text" class="form-control" id="reclamationTitle" required />
								</div>
								<div class="mb-3">
									<label for="reclamationDescription" class="form-label">Description</label>
									<textarea class="form-control" id="reclamationDescription" rows="3" required></textarea>
								</div>
								<button type="submit" class="btn btn-primary btn-lg" style="font-size: 0.8rem">
									Enregistrer les modifications
								</button>
							</form>
						</div>
					</div>
				</div>
			</div>

			<!-- Modale pour supprimer la réclamation -->
			<div
				class="modal fade"
				id="deleteReclamationModal"
				tabindex="-1"
				aria-labelledby="deleteReclamationModalLabel"
				aria-hidden="true"
			>
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header bg-danger text-white">
							<h5 class="modal-title" id="deleteReclamationModalLabel">Confirmer la suppression</h5>
							<button
								type="button"
								class="btn-close btn-close-white"
								data-bs-dismiss="modal"
								aria-label="Close"
							></button>
						</div>
						<div class="modal-body">
							<div class="alert alert-danger mb-0">
								<i class="fas fa-exclamation-triangle me-2"></i>
								<span>Êtes-vous sûr de vouloir supprimer cette réclamation ?</span>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
							<button type="button" class="btn btn-danger" id="confirmDeleteBtn">
								<i class="fas fa-trash me-1"></i> Supprimer
							</button>
						</div>
					</div>
				</div>
			</div>

			<!-- Pagination -->
			<nav aria-label="Page navigation">
				<ul class="pagination justify-content-center">
					<li class="page-item disabled">
						<a class="page-link" href="#" tabindex="-1">Précédent</a>
					</li>
					<li class="page-item active"><a class="page-link" href="#">1</a></li>
					<li class="page-item"><a class="page-link" href="#">2</a></li>
					<li class="page-item"><a class="page-link" href="#">3</a></li>
					<li class="page-item">
						<a class="page-link" href="#">Suivant</a>
					</li>
				</ul>
			</nav>
		</div>
		{% endblock %} {% block js%}

		<script>
			// Fonction pour charger les données de la réclamation dans la modale
			function loadReclamationData(id) {
				// Récupérer les données de la réclamation
				var title = document.getElementById("reclamation-title-" + id).textContent;
				var description = document.getElementById("reclamation-description-" + id).textContent;

				// Insérer ces données dans les champs du formulaire
				document.getElementById("reclamationTitle").value = title;
				document.getElementById("reclamationDescription").value = description;
			}

			// Ajouter un écouteur d'événement pour soumettre le formulaire
			document.getElementById("editReclamationForm").addEventListener("submit", function (event) {
				event.preventDefault();

				// Récupérer les nouvelles valeurs du formulaire
				var title = document.getElementById("reclamationTitle").value;
				var description = document.getElementById("reclamationDescription").value;
				var status = document.getElementById("reclamationStatus").value;

				// Sauvegarder les données, envoyer à l'API ou mettre à jour la base de données
				console.log("Titre:", title);
				console.log("Description:", description);
				console.log("Statut:", status);

				// Fermer la modale après sauvegarde
				var modal = bootstrap.Modal.getInstance(document.getElementById("editReclamationModal"));
				modal.hide();

				// Optionnellement, mettre à jour l'affichage sur la page
				// document.getElementById('reclamation-title-1').textContent = title;
				// document.getElementById('reclamation-description-1').textContent = description;
			});
		</script>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

		{% endblock %}
	</body>
</html>
