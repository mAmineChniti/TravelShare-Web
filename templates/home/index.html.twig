{% extends 'base.html.twig' %} {% block title %}Welcome to TravelShare{% endblock %} {% block body %}
<section class="bg-gray-50 dark:bg-gray-900">
	<div class="max-w-screen-xl px-4 py-8 mx-auto lg:py-16 lg:px-6">
		<div class="max-w-screen-lg mx-auto text-center">
			<h1
				class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white"
			>
				<i class="fas fa-globe-americas mr-2 text-blue-700"></i> Discover the World with TravelShare
			</h1>
			<p class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400">
				Plan your next adventure with ease. Explore flights, hotels, excursions, and more, all in one place.
			</p>
			<div class="flex flex-col mb-8 lg:mb-16 space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
				<a
					href="{{ path('app_flights') }}"
					class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900"
				>
					Book Flights
					<i class="fas fa-plane ml-2"></i>
				</a>
				<a
					href="{{ path('app_hotels') }}"
					class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-gray-900 rounded-lg border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800"
				>
					Find Hotels
					<i class="fas fa-hotel ml-2"></i>
				</a>
			</div>
		</div>
	</div>
</section>
<section class="relative bg-gray-50 dark:bg-gray-900">
	<div id="default-carousel" class="relative w-full" data-carousel="slide">
		<div class="relative h-112 overflow-hidden rounded-lg md:h-[48rem]">
			{% for slide in slides %}
			<div class="hidden duration-700 ease-in-out" data-carousel-item>
				<img src="{{ asset(slide.image) }}" class="absolute block w-full h-full object-cover" alt="{{ slide.alt }}" />
			</div>
			{% endfor %}
		</div>
		<div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-5 left-1/2">
			{% for slide in slides %}
			<button
				type="button"
				class="w-3 h-3 rounded-full"
				aria-current="{{ loop.first ? 'true' : 'false' }}"
				aria-label="Slide {{ loop.index }}"
				data-carousel-slide-to="{{ loop.index0 }}"
			></button>
			{% endfor %}
		</div>
		<button
			type="button"
			class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
			data-carousel-prev
		>
			<span
				class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 dark:bg-gray-800/30"
			>
				<i class="fas fa-chevron-left text-white dark:text-gray-800"></i>
			</span>
		</button>
		<button
			type="button"
			class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
			data-carousel-next
		>
			<span
				class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 dark:bg-gray-800/30"
			>
				<i class="fas fa-chevron-right text-white dark:text-gray-800"></i>
			</span>
		</button>
	</div>
</section>
<section class="bg-white dark:bg-gray-900">
	<div class="max-w-screen-xl px-4 py-8 mx-auto lg:py-16 lg:px-6">
		<div class="grid gap-8 lg:grid-cols-3">
			<div class="p-6 bg-gray-50 rounded-lg shadow dark:bg-gray-800 transition-transform hover:scale-105">
				<div class="flex items-center mb-4">
					<i class="fas fa-hiking text-3xl text-blue-700 mr-3"></i>
					<h3 class="text-xl font-bold text-gray-900 dark:text-white">Excursions</h3>
				</div>
				<p class="mb-4 text-gray-500 dark:text-gray-400">
					Discover unique experiences and adventures tailored to your interests.
				</p>
				<a
					href="{{ path('app_excursions') }}"
					class="inline-flex items-center text-blue-600 hover:underline dark:text-blue-500"
				>
					Explore Excursions
					<i class="fas fa-arrow-right ml-2"></i>
				</a>
			</div>
			<div class="p-6 bg-gray-50 rounded-lg shadow dark:bg-gray-800 transition-transform hover:scale-105">
				<div class="flex items-center mb-4">
					<i class="fas fa-comments text-3xl text-blue-700 mr-3"></i>
					<h3 class="text-xl font-bold text-gray-900 dark:text-white">Forum</h3>
				</div>
				<p class="mb-4 text-gray-500 dark:text-gray-400">
					Connect with fellow travelers, share tips, and get inspired.
				</p>
				<a
					href="{{ path('app_forum') }}"
					class="inline-flex items-center text-blue-600 hover:underline dark:text-blue-500"
				>
					Join the Forum
					<i class="fas fa-arrow-right ml-2"></i>
				</a>
			</div>
			<div class="p-6 bg-gray-50 rounded-lg shadow dark:bg-gray-800 transition-transform hover:scale-105">
				<div class="flex items-center mb-4">
					<i class="fas fa-plane-departure text-3xl text-blue-700 mr-3"></i>
					<h3 class="text-xl font-bold text-gray-900 dark:text-white">Flights</h3>
				</div>
				<p class="mb-4 text-gray-500 dark:text-gray-400">
					Find and book flights to your favorite destinations with ease.
				</p>
				<a
					href="{{ path('app_flights') }}"
					class="inline-flex items-center text-blue-600 hover:underline dark:text-blue-500"
				>
					Explore Flights
					<i class="fas fa-arrow-right ml-2"></i>
				</a>
			</div>
		</div>
	</div>
</section>

<section class="bg-gray-50 dark:bg-gray-900 py-8">
	<div class="max-w-screen-xl px-4 mx-auto">
		<h2 class="text-3xl font-bold mb-6 text-center text-gray-900 dark:text-white">
			<i class="fas fa-star text-yellow-400 mr-2"></i> Why Choose TravelShare?
		</h2>
		<div class="grid gap-8 md:grid-cols-4 text-center">
			<div class="p-4">
				<div class="bg-blue-700 text-white p-3 rounded-full inline-flex justify-center items-center w-14 h-14 mb-4">
					<i class="fas fa-hand-holding-usd text-2xl"></i>
				</div>
				<h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">Best Prices</h3>
				<p class="text-gray-500 dark:text-gray-400">Find the most competitive rates for your travels.</p>
			</div>
			<div class="p-4">
				<div class="bg-blue-700 text-white p-3 rounded-full inline-flex justify-center items-center w-14 h-14 mb-4">
					<i class="fas fa-shield-alt text-2xl"></i>
				</div>
				<h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">Secure Booking</h3>
				<p class="text-gray-500 dark:text-gray-400">Your transactions are always protected.</p>
			</div>
			<div class="p-4">
				<div class="bg-blue-700 text-white p-3 rounded-full inline-flex justify-center items-center w-14 h-14 mb-4">
					<i class="fas fa-headset text-2xl"></i>
				</div>
				<h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">24/7 Support</h3>
				<p class="text-gray-500 dark:text-gray-400">Our team is always ready to assist you.</p>
			</div>
			<div class="p-4">
				<div class="bg-blue-700 text-white p-3 rounded-full inline-flex justify-center items-center w-14 h-14 mb-4">
					<i class="fas fa-thumbs-up text-2xl"></i>
				</div>
				<h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">User Reviews</h3>
				<p class="text-gray-500 dark:text-gray-400">Make informed decisions based on real experiences.</p>
			</div>
		</div>
	</div>
</section>
{% endblock %}
