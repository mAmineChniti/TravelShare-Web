{% extends "base.html.twig" %}

{% block title %}Welcome to TravelShare{% endblock title %}

{% block body %}
    <div class="flex flex-col flex-1 w-full bg-background text-foreground">
        <div class="flex-grow flex items-center justify-center">
            <div class="container mx-auto px-4 py-16 text-center">
                <h1 class="text-5xl font-extrabold text-gray-800 mb-6">Welcome to <span class="text-blue-600">TravelShare</span></h1>
                <p class="text-lg text-gray-600 mb-8">
                    Your one-stop destination for flights, hotels, forums, and excursions. Plan your next adventure with ease!
                </p>
                <div class="flex justify-center space-x-4">
                    <a href="/flights" class="px-6 py-3 bg-blue-600 text-white rounded-md shadow hover:bg-blue-700 transition-all">
                        Explore Flights
                    </a>
                    <a href="/hotels" class="px-6 py-3 bg-gray-200 text-gray-800 rounded-md shadow hover:bg-gray-300 transition-all">
                        Browse Hotels
                    </a>
                </div>
            </div>
        </div>
        <div class="container mx-auto px-4 py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="bg-white shadow rounded-lg p-6 text-center">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Flights</h2>
                <p class="text-gray-600">Find the best deals on flights to your favorite destinations.</p>
            </div>
            <div class="bg-white shadow rounded-lg p-6 text-center">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Hotels</h2>
                <p class="text-gray-600">Discover comfortable and affordable accommodations worldwide.</p>
            </div>
            <div class="bg-white shadow rounded-lg p-6 text-center">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Forum</h2>
                <p class="text-gray-600">Connect with fellow travelers and share your experiences.</p>
            </div>
            <div class="bg-white shadow rounded-lg p-6 text-center">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Excursions</h2>
                <p class="text-gray-600">Book exciting excursions and tours for your next trip.</p>
            </div>
        </div>
    </div>
{% endblock body %}
