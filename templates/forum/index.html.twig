{% extends "base.html.twig" %}

{% block title %}Forum{% endblock title %}

{% block body %}
<div class="container mx-auto px-4 py-16">
{% include "components/post_form.html.twig" %}
    {% for post in posts %}
    <div class="mb-10">
        <twig:post 
            postId="{{ post.postId }}" 
            posterName="{{ post.name ~ ' ' ~ post.lastName }}" 
            text="{{ post.textContent }}" 
            comments="{{ post.comments }}"
            />
    </div>
    {% endfor %}
</div>
{% endblock body %}
