{% extends 'base.html.twig' %}

{% block title %}Flights{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <h1 class="text-2xl font-bold mb-4">Available Flights</h1>

    {% if voyages is not empty %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for voyage in voyages %}
                <div class="bg-white shadow-md rounded-lg p-6">
                    <h2 class="text-lg font-semibold mb-2">{{ voyage.titre }}</h2>
                    <p class="text-gray-700 mb-1"><strong>Destination:</strong> {{ voyage.destination }}</p>
                    <p class="text-gray-700 mb-1"><strong>Description:</strong> {{ voyage.description }}</p>
                    <p class="text-gray-700 mb-1"><strong>From:</strong> {{ voyage.dateDepart|date('Y-m-d') }}</p>
                    <p class="text-gray-700 mb-1"><strong>To:</strong> {{ voyage.dateRetour|date('Y-m-d') }}</p>
                    <p class="text-gray-700 mb-1"><strong>Price:</strong> â‚¬{{ voyage.prix }}</p>
                    <p class="text-gray-700"><strong>Available Seats:</strong> {{ voyage.placesDisponibles }}</p>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>No flights available at the moment.</p>
    {% endif %}
</div>
{% endblock %}
