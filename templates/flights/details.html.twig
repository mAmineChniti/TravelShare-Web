{% extends 'base.html.twig' %}

{% block title %}Flight Details{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="p-6">
            <h1 class="text-4xl font-extrabold text-gray-800 mb-6">{{ voyage.titre }}</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <p class="text-lg text-gray-700">Destination: <span class="font-semibold text-gray-900">{{ voyage.destination }}</span></p>
                    <p class="text-lg text-gray-700">Description: <span class="font-semibold text-gray-900">{{ voyage.description }}</span></p>
                    <p class="text-lg text-gray-700">Price: <span class="font-semibold text-green-600">{{ voyage.prix }} â‚¬</span></p>
                </div>
                <div class="space-y-4">
                    <p class="text-lg text-gray-700">Available Places: <span class="font-semibold text-gray-900">{{ voyage.placesDisponibles }}</span></p>
                    <p class="text-lg text-gray-700">Departure Date: <span class="font-semibold text-blue-600">{{ voyage.dateDepart|date('d-m-Y') }}</span></p>
                    <p class="text-lg text-gray-700">Return Date: <span class="font-semibold text-blue-600">{{ voyage.dateRetour|date('d-m-Y') }}</span></p>
                </div>
            </div>
            <div class="mt-8">
                <form method="post" action="{{ path('app_reserve_flight', {id: voyage.offresVoyageId}) }}" class="space-y-4">
                    <label for="nbrPlace" class="block text-lg font-medium text-gray-700">Number of Seats:</label>
                    <input type="number" id="nbrPlace" name="nbrPlace" min="1" max="{{ voyage.placesDisponibles }}" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" required>
                    <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-blue-700 transition duration-300">Reserve Now</button>
                </form>
                {% for message in app.flashes('success') %}
                    <div class="mt-4 p-4 bg-green-100 text-green-800 rounded-lg">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="mt-4 p-4 bg-red-100 text-red-800 rounded-lg">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <div class="mt-8">
                <a href="{{ path('app_flights') }}" class="inline-block bg-gray-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-gray-700 transition duration-300">Back to Flights</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}