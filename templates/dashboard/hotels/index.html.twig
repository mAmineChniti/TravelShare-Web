{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - Hotels{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="flex justify-between items-center mb-6">
                {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
                    {{ message }}
                </div>
            {% endfor %}
        <h1 class="text-2xl font-bold">Hotels Management</h1>
        <a href="{{ path('dashboard_hotels_add') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 cursor-pointer">Add Hotel</a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for hotel in hotels %}
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="h-48 w-full bg-gray-200 flex items-center justify-center">
                    {% if hotel.imageH %}
                        <img src="data:image/jpeg;base64,{{ hotel.base64Image }}" alt="{{ hotel.nom }}" class="h-full w-auto object-cover">
                    {% else %}
                        <span class="text-gray-500">No Image Available</span>
                    {% endif %}
                </div>
                <div class="p-4">
                    <h2 class="text-lg font-semibold text-gray-800">{{ hotel.nom }}</h2>
                    <p class="text-sm text-gray-600 mt-2"><strong>Address:</strong> {{ hotel.adress }}</p>
                    <p class="text-sm text-gray-600"><strong>Phone:</strong> {{ hotel.telephone }}</p>
                    <p class="text-sm text-gray-600"><strong>Capacity:</strong> {{ hotel.capaciteTotale }} guests</p>
                </div>
                <div class="p-4 border-t border-gray-200 flex justify-between">
                    <a href="{{ path('dashboard_hotels_edit', {id: hotel.hotelId}) }}" class="text-blue-500 hover:underline text-sm">Edit</a>
                    <a href="{{ path('dashboard_hotels_delete', {id: hotel.hotelId}) }}" class="text-red-500 hover:underline text-sm" onclick="return confirm('Are you sure you want to delete this hotel?');">Delete</a>
                    <a href="{{ path('dashboard_rooms', {id: hotel.hotelId}) }}" class="text-green-500 hover:underline text-sm">Manage Rooms</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}