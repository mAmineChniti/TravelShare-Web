{% extends 'base.html.twig' %}

{% block title %}Manage Flights{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-extrabold text-gray-800 mb-6">Manage Flights</h1>
    
    {% for message in app.flashes('success') %}
        <div class="mb-4 p-4 bg-green-100 text-green-800 rounded-lg">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="mb-4 p-4 bg-red-100 text-red-800 rounded-lg">
            {{ message }}
        </div>
    {% endfor %}

    <div class="mb-8">
        <a href="{{ path('app_add_flight') }}" class="bg-green-600 text-white px-6 py-3 rounded-lg shadow-md hover:bg-green-700 transition duration-300">Add New Flight</a>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-100 border-b">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Title</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Destination</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Price</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Available Places</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Departure</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Return</th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% if voyages is not empty %}
                    {% for voyage in voyages %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm text-gray-900">{{ voyage.titre }}</td>
                            <td class="px-6 py-4 text-sm text-gray-900">{{ voyage.destination }}</td>
                            <td class="px-6 py-4 text-sm text-gray-900">{{ voyage.prix }} â‚¬</td>
                            <td class="px-6 py-4 text-sm text-gray-900">{{ voyage.placesDisponibles }}</td>
                            <td class="px-6 py-4 text-sm text-gray-900">{{ voyage.dateDepart|date('d-m-Y') }}</td>
                            <td class="px-6 py-4 text-sm text-gray-900">{{ voyage.dateRetour|date('d-m-Y') }}</td>
                            <td class="px-6 py-4 text-sm text-gray-900 space-x-2">
                                <a href="{{ path('app_edit_flight', {id: voyage.offresVoyageId}) }}" class="text-blue-600 hover:text-blue-800 hover:underline">Edit</a>
                                <form action="{{ path('app_delete_flight', {id: voyage.offresVoyageId}) }}" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this flight?');">
                                    <button type="submit" class="text-red-600 hover:text-red-800 hover:underline">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="7" class="px-6 py-4 text-center text-gray-500">No flights found. Click "Add New Flight" to create one.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}