{% extends 'base.html.twig' %} {% block title %}Rooms Management{% endblock %} {% block body %}
<div class="container py-5">
	<div id="success-messages" class="mt-3">
		{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			<p class="mb-0">{{ message }}</p>
		</div>
		{% endfor %}
	</div>

	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="display-4 fw-bold">Rooms Management</h1>
		<a href="{{ path('dashboard_rooms_add', {hotelId: hotel.hotelId}) }}" class="btn btn-primary"> Add Room </a>
	</div>

	<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
		{% for room in rooms %}
		<div class="col">
			<div class="card h-100 shadow">
				<div class="card-body">
					<h2 class="h3 fw-semibold">Room Number: {{ room.numeroChambre }}</h2>
					<p class="mb-1"><strong>Type:</strong> {{ room.typeEnu }}</p>
					<p class="mb-1"><strong>Price per Night:</strong> {{ room.prixParNuit }} â‚¬</p>
					<p class="mb-1"><strong>Available:</strong> {{ room.disponible ? 'Yes' : 'No' }}</p>
				</div>
				<div class="card-footer bg-transparent">
					<div class="d-flex justify-content-between">
						<a href="{{ path('dashboard_rooms_edit', {id: room.chambreId}) }}" class="btn btn-outline-secondary">
							Edit
						</a>
						<a
							href="{{ path('dashboard_rooms_delete', {id: room.chambreId}) }}"
							class="btn btn-danger"
							onclick="return confirm('Are you sure you want to delete this room?');"
						>
							Delete
						</a>
					</div>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}
