{% extends 'base.html.twig' %} {% block title %}Rooms Management{% endblock %} {% block body %}
<div class="container mx-auto px-4 mt-8 space-y-6">
	<div id="success-messages" class="mt-4">
		{% for message in app.flashes('success') %}
		<p class="text-sm text-green-600">{{ message }}</p>
		{% endfor %}
	</div>
	<div class="flex justify-between items-center">
		<h1 class="text-5xl font-bold">Rooms Management</h1>
		<a
			href="{{ path('dashboard_rooms_add', {hotelId: hotel.hotelId}) }}"
			class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg shadow"
		>
			Add Room
		</a>
	</div>

	<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
		{% for room in rooms %}
		<div class="bg-white rounded-lg shadow-md p-6">
			<div class="space-y-2">
				<h2 class="text-3xl font-semibold">Room Number: {{ room.numeroChambre }}</h2>
				<p class="text-base text-gray-700"><strong>Type:</strong> {{ room.typeEnu }}</p>
				<p class="text-base text-gray-700"><strong>Price per Night:</strong> {{ room.prixParNuit }} â‚¬</p>
				<p class="text-base text-gray-700"><strong>Available:</strong> {{ room.disponible ? 'Yes' : 'No' }}</p>
			</div>
			<div class="flex justify-between mt-4">
				<a
					href="{{ path('dashboard_rooms_edit', {id: room.chambreId}) }}"
					class="bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded-lg"
				>
					Edit
				</a>
				<a
					href="{{ path('dashboard_rooms_delete', {id: room.chambreId}) }}"
					class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg"
					onclick="return confirm('Are you sure you want to delete this room?');"
				>
					Delete
				</a>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}
