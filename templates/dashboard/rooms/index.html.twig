{% extends 'base.html.twig' %}

{% block title %}Rooms Management{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Rooms Management</h1>
        <a href="{{ path('dashboard_rooms_add', {hotelId: hotelId}) }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 cursor-pointer">Add Room</a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
            {{ message }}
        </div>
    {% endfor %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for room in chambres %}
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="p-4">
                    <h2 class="text-lg font-semibold text-gray-800">Room Number: {{ room.numeroChambre }}</h2>
                    <p class="text-sm text-gray-600 mt-2"><strong>Type:</strong> {{ room.typeEnu }}</p>
                    <p class="text-sm text-gray-600"><strong>Price per Night:</strong> {{ room.prixParNuit }} â‚¬</p>
                    <p class="text-sm text-gray-600"><strong>Available:</strong> {{ room.disponible ? 'Yes' : 'No' }}</p>
                </div>
                <div class="p-4 border-t border-gray-200 flex justify-between">
                    <a href="{{ path('dashboard_rooms_edit', {id: room.chambreId}) }}" class="text-blue-500 hover:underline text-sm">Edit</a>
                    <a href="{{ path('dashboard_rooms_delete', {id: room.chambreId}) }}" class="text-red-500 hover:underline text-sm" onclick="return confirm('Are you sure you want to delete this room?');">Delete</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}