{% extends 'base.html.twig' %}

{% block title %}Edit Hotel{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6">
        <h1 class="text-2xl font-bold">Edit Hotel</h1>

        <form method="post" class="mt-4">
            <div class="mb-4">
                <label class="block text-gray-700">Hotel Name</label>
                <input type="text" name="nom" value="{{ hotel.nom }}" required class="w-full px-4 py-2 border rounded">
            </div>

            <div class="mb-4">
                <label class="block text-gray-700">Address</label>
                <textarea name="adress" class="w-full px-4 py-2 border rounded">{{ hotel.adress }}</textarea>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700">Telephone</label>
                <input type="text" name="telephone" value="{{ hotel.telephone }}" class="w-full px-4 py-2 border rounded">
            </div>

            <div class="mb-4">
                <label class="block text-gray-700">Capacity</label>
                <input type="number" name="capacite_totale" value="{{ hotel.capaciteTotale }}" required class="w-full px-4 py-2 border rounded">
            </div>

            <div class="mt-6">
                <button type="submit" class="bg-yellow-500 text-white px-6 py-2 rounded">Update</button>
                <a href="{{ path('hotel_list') }}" class="ml-2 text-blue-500">Cancel</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
