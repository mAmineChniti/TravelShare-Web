{% extends 'base.html.twig' %}

{% block title %}List of Excursions | Admin Dashboard{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css3/plugins.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css3/kaiadmin.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('css3/demo.css') }}" />
    <style>
        .notif-primary {
            color: #4361ee;
            background-color: rgba(67, 97, 238, 0.1);
        }

        .notif-success {
            color: #06d6a0;
            background-color: rgba(6, 214, 160, 0.1);
        }

        .notif-danger {
            color: #ef476f;
            background-color: rgba(239, 71, 111, 0.1);
        }

        .notif-warning {
            color: #ffd166;
            background-color: rgba(255, 209, 102, 0.1);
        }

        .notif-info {
            color: #118ab2;
            background-color: rgba(17, 138, 178, 0.1);
        }

        .notif-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 15px;
        }

        .notification {
            position: absolute;
            top: -5px;
            right: -5px;
            font-size: 10px;
            background-color: #ef476f;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .date-badge {
            background-color: #e3f2fd;
            color: #1976d2;
            font-weight: 500;
            padding: 0.35em 0.65em;
            border-radius: 50px;
            font-size: 0.8rem;
        }

        .price-badge {
            background-color: #e8f5e9;
            color: #388e3c;
            font-weight: 500;
            padding: 0.35em 0.65em;
            border-radius: 50px;
            font-size: 0.8rem;
        }

        .table-excursions tbody tr {
            transition: all 0.2s ease;
        }

        .table-excursions tbody tr:hover {
            background-color: rgba(23, 125, 255, 0.05) !important;
        }

        .action-btn {
            width: 30px;
            height: 30px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0;
        }

        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #dee2e6;
        }

        .card-excursions {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        }

        .excursion-image {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid #e0e0e0;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-inner">
        <div class="page-header">
            <h4 class="page-title">Gestion des Excursions</h4>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a href="{{ path('app_accueil_admin') }}">
                        <i class="flaticon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="flaticon-right-arrow"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Excursions</a>
                </li>
                <li class="separator">
                    <i class="flaticon-right-arrow"></i>
                </li>
                <li class="nav-item">
                    <a href="#">List of Excursions</a>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card card-excursions">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <h4 class="card-title">List of Excursions</h4>
                            <a href="{{ path('app_excursions_new') }}" class="btn btn-primary btn-round ml-auto">
                                <i class="fas fa-plus mr-2"></i> New Excursion
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if excursions|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-excursions">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Dates</th>
                                            <th>Price</th>
                                            <th>Guide</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for excursion in excursions %}
                                            <tr>
                                                <td>
                                                    {% if excursion.image %}
                                                        <img src="{{ excursion.image }}" class="excursion-image" alt="{{ excursion.title }}" onerror="this.onerror=null; this.src='{{ asset('images2/default-excursion.jpg') }}';" />
                                                    {% else %}
                                                        <div class="excursion-image bg-light d-flex align-items-center justify-content-center">
                                                            <i class="fas fa-image text-muted"></i>
                                                        </div>
                                                    {% endif %}
                                                </td>
                                                <td class="fw-semibold">{{ excursion.title }}</td>
                                                <td>
                                                    <span class="text-muted" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                                        {{ excursion.description }}
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="date-badge">{{ excursion.dateExcursion|date('d/m/Y') }}</span>
                                                    <span class="mx-1">-</span>
                                                    <span class="date-badge">{{ excursion.dateFin|date('d/m/Y') }}</span>
                                                </td>
                                                <td>
                                                    <span class="price-badge">{{ excursion.prix }} DT</span>
                                                </td>
                                                <td>
                                                    {% if excursion.guide %}
                                                        <span class="badge bg-info">{{ excursion.guide.name }} {{ excursion.guide.lastName }}</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">Aucun guide</span>
                                                    {% endif %}
                                                </td>
                                                <td class="text-end">
                                                    <div class="d-flex justify-content-end gap-2">
                                                        <a href="{{ path('app_excursions_edit', {'id': excursion.excursionId}) }}" class="btn btn-primary btn-sm action-btn" data-toggle="tooltip" title="Update">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <form method="post" action="{{ path('app_excursions_delete', {'id': excursion.excursionId}) }}" onsubmit="return confirm('Are you sure you want to delete this excursion?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ excursion.excursionId) }}" />
                                                            <button type="submit" class="btn btn-danger btn-sm action-btn" data-toggle="tooltip" title="Delete">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="empty-state">
                                <i class="fas fa-umbrella-beach"></i>
                                <h3 class="h5 mt-3">No excursions found</h3>
                                <p class="text-muted">Start by adding a new excursion</p>
                                <a href="{{ path('app_excursions_new') }}" class="btn btn-success mt-2">
                                    <i class="fas fa-plus mr-2"></i> Ajouter une excursion
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
