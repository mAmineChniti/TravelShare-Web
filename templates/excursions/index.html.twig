<!-- Updated to rely on app.css for theme handling -->
{% extends 'base.html.twig' %}

{% block title %}Excursions{% endblock %}

{% block css %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="{{ asset('css3/bootstrap.min.css') }}" />
{% endblock %}

{% block body %}
<body>
    <div class="container py-5">
        <div class="row mb-4">
            <div class="col">
                <h1 class="text-center">Excursions</h1>
                <p class="text-center text-muted">Discover exciting excursions and plan your adventures with ease.</p>
            </div>
        </div>
        <div class="row">
            {% for excursion in excursions %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ excursion.title }}</h5>
                        <p class="card-text">{{ excursion.description }}</p>
                        <a href="{{ path('app_excursions_show', {'id': excursion.id}) }}" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center">No excursions found.</div>
            </div>
            {% endfor %}
        </div>
    </div>
</body>
{% endblock %}
