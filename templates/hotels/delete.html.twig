{% extends 'base.html.twig' %}

{% block title %}Delete Hotel{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
        <h1 class="text-2xl font-bold text-red-600">Confirm Deletion</h1>
        <p class="mt-2">Are you sure you want to delete <strong>{{ hotel.nom }}</strong>? This action cannot be undone.</p>

        <form method="post" class="mt-6">
            <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded">Delete</button>
            <a href="{{ path('hotel_list') }}" class="ml-2 text-blue-500">Cancel</a>
        </form>
    </div>
</div>
{% endblock %}
