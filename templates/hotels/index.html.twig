{% extends 'base.html.twig' %}

{% block title %}Hotels{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for hotel in hotels %}
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="h-48 w-full bg-gray-200 flex items-center justify-center">
                    {% if hotel.imageH %}
                        <img src="data:image/jpeg;base64,{{ hotel.base64Image }}" alt="{{ hotel.nom }}" class="h-full w-auto object-cover">
                    {% else %}
                        <span class="text-gray-500">No Image Available</span>
                    {% endif %}
                </div>
                <div class="p-4">
                    <h2 class="text-lg font-semibold text-gray-800">{{ hotel.nom }}</h2>
                    <p class="text-sm text-gray-600 mt-2"><strong>Address:</strong> {{ hotel.adress }}</p>
                    <p class="text-sm text-gray-600"><strong>Phone:</strong> {{ hotel.telephone }}</p>
                    <p class="text-sm text-gray-600"><strong>Capacity:</strong> {{ hotel.capaciteTotale }} guests</p>
                </div>
                <div class="p-4 border-t border-gray-200">
                    <a href="{{ path('hotel_rooms', { hotelId: hotel.id }) }}" class="text-blue-500 hover:underline text-sm">View Available Rooms</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
