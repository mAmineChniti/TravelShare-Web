{% extends "base.html.twig" %}

{% block title %}Add Hotel - TravelShare{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="max-w-2xl mx-auto bg-white shadow rounded-lg p-6">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">Add a New Hotel</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                <label class="block text-gray-700">Hotel Name</label>
                {{ form_widget(form.nom, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            </div>
            <div>
                <label class="block text-gray-700">Address</label>
                {{ form_widget(form.adress, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            </div>
            <div>
                <label class="block text-gray-700">Telephone</label>
                {{ form_widget(form.telephone, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            </div>
            <div>
                <label class="block text-gray-700">Capacity</label>
                {{ form_widget(form.capaciteTotale, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            </div>
            <div>
                <label class="block text-gray-700">Image</label>
                {{ form_widget(form.imageH, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            </div>
            <div class="flex justify-end">
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md shadow hover:bg-blue-700">
                    Save Hotel
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
