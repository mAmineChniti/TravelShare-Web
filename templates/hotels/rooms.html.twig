{% extends 'base.html.twig' %} {% block title %}Available Rooms{% endblock %} {% block body %}
<div class="container mx-auto px-4 mt-8 space-y-6">
	<h1 class="text-5xl font-bold mb-6">Available Rooms at {{ hotel.nom }}</h1>

	{% set availableRooms = rooms|filter(r => r.disponible != 0) %} {% if availableRooms is empty %}
	<div class="text-center text-gray-700">No rooms available at the moment.</div>
	{% else %}
	<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
		{% for room in availableRooms %}
		<div class="bg-white rounded-lg shadow-md p-6">
			<div class="space-y-2">
				<h2 class="text-3xl font-semibold">Room {{ room.numeroChambre }}</h2>
				<p class="text-base text-gray-700"><span class="font-medium">Type:</span> {{ room.typeEnu }}</p>
				<p class="text-base text-gray-700">
					<span class="font-medium">Price:</span> {{ room.prixParNuit }} TND / night
				</p>
			</div>
			<div class="mt-4">
				<a
					href="{{ path('room_details', { roomId: room.chambreId }) }}"
					class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg shadow block text-center"
				>
					View Details
				</a>
			</div>
		</div>
		{% endfor %}
	</div>
	{% endif %}
</div>
{% endblock %}
