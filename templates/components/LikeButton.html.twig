<div id="likeContainer-{{ postId }}" class="flex items-center">
	<form
		hx-post="{{ path('app_forum_like') }}"
		hx-target="#likeContainer-{{ postId }}"
		hx-swap="outerHTML"
		class="flex items-center"
	>
		<input type="hidden" name="postId" value="{{ postId }}" />
		<button
			type="submit"
			class="p-2 w-10 h-10 {% if isLiked %}bg-red-600 hover:bg-red-700{% else %}bg-blue-600 hover:bg-blue-700{% endif %} text-white rounded-full shadow transition-all cursor-pointer flex items-center justify-center"
			title="{% if isLiked %}Unlike{% else %}Like{% endif %} this post"
		>
			<i class="fa fa-{% if isLiked %}thumbs-down{% else %}thumbs-up{% endif %}">&nbsp;{{ likesCount }}</i>
		</button>
	</form>
</div>
