<div class="bg-white shadow rounded-lg p-6">
    <div class="mb-4">
        <span class="font-semibold text-gray-800 text-lg">{{ posterName }}</span>
        <p class="text-gray-600 mt-2">{{ text }}</p>
    </div>
    <div class="mt-6">
        <input type="text" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Write a comment...">
        <div class="flex justify-end">
            <button class="mt-2 px-4 py-2 bg-blue-600 text-white font-semibold rounded-md shadow hover:bg-blue-700 transition-all">Comment</button>
        </div>
    </div>
    <div class="mt-4">
        {% for comment in comments %}
            <div class="mb-2">
                <twig:comment
                    commenter="{{ comment.name ~ ' ' ~ comment.lastName }}"
                    text="{{ comment.comment }}" />
            </div>
        {% endfor %}
    </div>
</div>