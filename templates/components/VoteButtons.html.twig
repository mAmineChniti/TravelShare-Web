<div id="voteButtonsContainer-{{ postId }}" class="d-flex gap-2">
	<form hx-post="{{ path('app_forum_upvote') }}" hx-target="#voteButtonsContainer-{{ postId }}" hx-swap="outerHTML">
		<input type="hidden" name="postId" value="{{ postId }}" />
		<button
			type="submit"
			class="btn btn-sm {% if isLiked is same as(true) %} btn-primary {% else %} btn-outline-secondary {% endif %}"
			title="Upvote this post"
		>
			<i class="fas fa-arrow-up me-1"></i>{{ likesCount }}
		</button>
	</form>
	<form hx-post="{{ path('app_forum_downvote') }}" hx-target="#voteButtonsContainer-{{ postId }}" hx-swap="outerHTML">
		<input type="hidden" name="postId" value="{{ postId }}" />
		<button
			type="submit"
			class="btn btn-sm {% if isLiked is same as(false) %} btn-danger {% else %} btn-outline-secondary {% endif %}"
			title="Downvote this post"
		>
			<i class="fas fa-arrow-down me-1"></i>{{ dislikesCount }}
		</button>
	</form>
</div>
