<div class="bg-white shadow rounded-lg p-6 mb-12">
    <textarea id="postTextarea" class="w-full h-24 p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" maxlength="255" placeholder="Share your thoughts..." minlength="15"></textarea>
    <div class="flex justify-end items-center mt-2">
        <span id="charCount" class="text-sm text-gray-500">0/255</span>
    </div>
    <div class="flex justify-end">
        <button class="mt-4 px-6 py-2 bg-blue-600 text-white font-semibold rounded-md shadow hover:bg-blue-700 transition-all">Post</button>
    </div>
</div>

<script>
    const textarea = document.getElementById('postTextarea');
    const charCount = document.getElementById('charCount');

    textarea.addEventListener('input', () => {
        charCount.textContent = `${textarea.value.length}/255`;
    });
</script>
